<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#0B617C</item>
    </style>

    <style name="username">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="password">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="forget_pass">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="don_t_have_">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="admin_menu_txt">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="dashboard_txt">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<style name="customActionBar" parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/appColor</item>
</style>

    <style name="customDashActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/appColor</item>
    </style>

    <style name="user">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#000000</item>
    </style>

        <style name="order_item_head">
            <item name="android:textSize">20sp</item>
            <item name="android:textColor">#000000</item>
        </style>

    <style name="order_item">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminDashboard">

    <RelativeLayout
        android:id="@+id/admin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/admin_dash_top" />

        <ImageView
            android:id="@+id/admin_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/user_icon_top" />

        <ImageView
            android:id="@+id/admin_location_icon"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="292dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/admin_profile_icon"
            android:background="@drawable/location_icon_top" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/admin_dashboard_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_top"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/dashboard_txt"
            android:text="@string/dashboard" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/admin_menu_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_dashboard_txt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/add_colleges"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_college_admin" />

        <TextView
            android:id="@+id/add_college_txt"
            style="@style/admin_menu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_colleges"
            android:layout_alignParentStart="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="4dp"
            android:text="@string/colleges" />

        <ImageView
            android:id="@+id/admin_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="46dp"
            android:layout_toEndOf="@+id/add_colleges"
            android:background="@drawable/ic_user_admin" />

        <TextView
            android:id="@+id/admin_user_txt"
            style="@style/admin_menu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_user"
            android:layout_marginStart="175dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/add_college_txt"
            android:text="@string/user" />

    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/admin_menu_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_menu_1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/add_stocks"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_admin_stocks" />

        <TextView
            android:id="@+id/add_stocks_txt"
            style="@style/admin_menu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_stocks"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="5dp"
            android:text="@string/stocks" />

        <ImageView
            android:id="@+id/admin_suggestion"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="47dp"
            android:layout_toEndOf="@+id/add_stocks"
            android:background="@drawable/ic_suggestion_admin" />

        <TextView
            android:id="@+id/admin_location_txt"
            style="@style/admin_menu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_suggestion"
            android:layout_marginStart="161dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/add_stocks_txt"
            android:text="@string/suggestions" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/admin_menu_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_menu_2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/add_categories"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_category_admin" />

        <TextView
            android:id="@+id/add_categories_txt"
            style="@style/admin_menu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_categories"
            android:layout_alignParentStart="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="1dp"
            android:text="@string/categories" />

        <ImageView
            android:id="@+id/admin_report"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="46dp"
            android:layout_toEndOf="@+id/add_categories"
            android:background="@drawable/ic_report_admin" />

        <TextView
            android:id="@+id/admin_report_txt"
            style="@style/admin_menu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_report"
            android:layout_marginStart="161dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/add_categories_txt"
            android:text="@string/report" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/admin_menu_3"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bottom_admin" />

    </RelativeLayout>


</RelativeLayout>